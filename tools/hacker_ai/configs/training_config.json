{
  "model": {
    "base_model": "gpt2",
    "vocab_size": 50257,
    "max_length": 512
  },
  "data": {
    "path": "./datasets/hacker_data.txt"
  },
  "training": {
    "output_dir": "./models/hacker_ai_trained",
    "batch_size": 4,
    "epochs": 3,
    "learning_rate": 5e-5,
    "warmup_steps": 100,
    "save_steps": 500,
    "auto_cleanup_checkpoints": true,
    "keep_best_checkpoint": false,
    "cleanup_unnecessary_files": true
  }
} 